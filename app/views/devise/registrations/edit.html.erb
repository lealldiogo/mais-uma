<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h2>Editar Meu Perfil </h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, autocomplete: "off", hint: "Deixe em branco caso não queira mudar", required: false %>
          <%= f.input :password_confirmation, required: false %>
          <%= f.input :current_password, hint: "Precisamos da sua senha atual para confirmar as mudanças", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Atualizar" %>
        </div>
      <% end %>

      <div class="edit-form">
        <p class="help-block">
        <%= link_to "Cancelar Conta", registration_path(resource_name), data: { confirm: "Você tem certeza? Sentiremos sua falta!" }, method: :delete %></p>
        <p class="help-block">
          <%= link_to "Voltar", :back %>
        </p>
      </div>
    </div>
  </div>
</div>


