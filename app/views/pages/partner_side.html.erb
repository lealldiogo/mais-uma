<div style="background-color:#E84751">
  <br>
  <br>
  <div class="msg" style="text-align: center; color: white; font-size: 80px;">
    <h1> Partners </h1>
    <br>
    <%= select_tag(:event, options_from_collection_for_select(current_user.events, "id", "away_team"), prompt: "Selecione o jogo", class: 'btn btn-primary btn-lg center-block') %>
    <br>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4">
          <img width="350" height="350" src="https://image.flaticon.com/icons/svg/290/290186.svg">
        </div>
        <div class="col-xs-12 col-sm-4">
          <img width="350" height="350" src="https://image.flaticon.com/icons/svg/168/168530.svg">
        </div>
        <div class="col-xs-12 col-sm-4">
          <img width="400" height="400" src="https://image.flaticon.com/icons/svg/290/290175.svg">
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-4 text-center">
          <%= link_to "Review Orders", "#", class: "btn btn-primary selectors-btn order" %>
        </div>
        <div class="col-xs-12 col-sm-4 text-center">
         <%= link_to "Review Products", "#", class: "btn btn-primary selectors-btn product"%>
        </div>
        <div class="col-xs-12 col-sm-4 text-center">
         <%= link_to "View Kpis", "#", class: "btn btn-primary selectors-btn kpi"%>
        </div>
      </div>
    </div>
  </div>
</div>

<%= content_for :manager_event do %>
  <script>
    $(document).ready(function(){
      $('#event').on('change', function(){
        $('.order').attr('href', 'orders?event_id='+ $('#event').val());
        $('.product').attr('href', 'products?event_id='+ $('#event').val());
        $('.kpi').attr('href', 'partner_kpi?event_id='+ $('#event').val());
      });
    });
  </script>
<% end %>
