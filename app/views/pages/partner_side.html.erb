<%= content_for :manager_event do %>
  <script>
    $(document).ready(function(){
      $('.order').on('click', function(){
        $('.order').attr('href', 'orders?event_id='+ $('#event').val());
      });
      $('.prod').on('click', function(){
        $('.prod').attr('href', 'products?event_id='+ $('#event').val());
      });
      $('.kpi').on('click', function(){
        $('.kpi').attr('href', 'partner_kpi?event_id='+ $('#event').val());
      });
    });
  </script>
<% end %>

