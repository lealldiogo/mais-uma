
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-md-offset-0">
    <h2><%=@event.location%></h2>

    <%= cl_image_tag(@event.photo, width: 578, height: 818, crop: :fill)%>
    </div>
    <div class="col-xs-6 col-xs-offset-3 col-md-offset-0" style="padding-top: 80px">
    <%= form_tag(products_select_path(@section), method: "get") do %>
        <%= select_tag(:section, options_from_collection_for_select(@event.sections, "id", "name"), prompt: "Selecione seu setor", class: 'btn btn-primary btn-lg') %>
        <%= submit_tag 'Selecionar', class: 'btn btn-primary btn-lg' %>
    <% end %>
    </div>
  </div>
</div>
