
<div class="container">
  <div class="row">
    <p>Teste!</p>

    <p><%=@event.location%></p>

    <%= cl_image_tag(@event.photo,
      width: 578, height: 818, crop: :fill)%>

    <%= form_tag(products_select_path(@section), method: "get") do %>
        <%= select_tag(:section, options_from_collection_for_select(@event.sections, "id", "name"), prompt: "Selecione seu setor", class: 'btn btn-primary btn-lg') %>
        <%= submit_tag 'Save' %>
    <% end %>

  </div>
</div>
