
<div class="container">
  <div class="row">
    <div class="stadium-img col-xs-12 col-md-6 col-sm-12">
      <%= cl_image_tag(@event.photo, class: "img-responsive",  crop: :fill)%>
    </div>
    <div class="list-group stadium-sectors col-md-6 col-sm-12" style="margin-top: 20px">
      <p>Partida: <%= @event.home_team %> x <%= @event.away_team %></p>
      <p>Data: <%= @event.datetime.day %>/<%= @event.datetime.month %>/<%= @event.datetime.year %></p>
      <p>Hor√°rio: <%= @event.datetime.hour %>:00</p>
      <p>Local: <%= @event.location %></p>
      <button type="button" class="btn btn-default button-sectors">Default</button>
      <div class="lista">
        <% @sections.each do |sec| %>
          <%= link_to products_select_path(section: sec.id) do %>
            <button class="button-hidden"  type="button" class="list-group-item">
              <%= sec.name %>
            </button>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>


<script>
  $(document).ready(function(){
    $(".button-hidden").hide();

    });

  };
</script>

