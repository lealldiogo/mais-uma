<!-- Page where the manager can see all the stocks for a given product -->

<div class="container">
  <div class="row">

    <!-- Product name and price -->
    <div class="col-xs-12 col-sm-6">
      <h1 style="font-family:'Open Sans', sans-serif; font-size: 50px"><%= @product.name %></h1>
      <h3 style="color: black">R$ <%= @product.price %></h3>

      <!-- Link back to the managers home page -->
      <%= link_to "Manager Home", partner_side_path, class: "btn custom-button" %>
    </div>

    <!-- Product stocks list -->
    <div class="col-xs-12 col-sm-6">
      <h3 style="color: black">Quantidade em Estoque</h3>
      <div class="stock-box" style="padding: 10px">

      <ul>
        <% @products_stocks.each_with_index do |stock, i| %>

          <!-- Prints a <hr> element unless it is the first element -->
          <% if i!=0 %>
            <hr>
          <% end %>

          <!-- Stand name and product quantity -->
          <li>
            <dl class="dl-horizontal">
              <dt>Loja</dt>
              <dd><%= stock.stand %></dd>
              <dt>Quantidade</dt>
              <dd><%= stock.quantity %></dd>
            </dl>

            <!-- Link to edit products stock page -->
            <%= link_to "Mudar Quantidade", edit_product_products_stock_path(@product, stock), class: "btn custom-button", style: "width: 100%" %>
          </li>

        <% end %>
      </ul>

      </div>
    </div>

  </div>
</div>
